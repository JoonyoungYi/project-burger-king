<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <item>
        <shape
            android:shape="rectangle"
            android:dither="true">

            <corners
                android:topLeftRadius="2dp"
                android:topRightRadius="2dp"
                android:bottomLeftRadius="2dp"
                android:bottomRightRadius="2dp" />

            <solid android:color="@color/burger_card_shadow" />
        </shape>
    </item>

    <item
        android:bottom="2dp"
        android:left="0.8dp"
        android:right="0.8dp">
        <shape
            android:shape="rectangle"
            android:dither="true">

            <corners
                android:topLeftRadius="2dp"
                android:topRightRadius="2dp"
                android:bottomLeftRadius="2dp"
                android:bottomRightRadius="2dp" />

            <solid android:color="@color/burger_card_background" />

            <padding
                android:bottom="2dp"
                android:left="0.8dp"
                android:right="0.8dp"
                android:top="0dp" />
        </shape>
    </item>
</layer-list>